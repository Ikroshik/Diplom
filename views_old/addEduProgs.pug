extends baseForChoosing 

append breadcrumb
    li.breadcrumb-item
        a.text-black.fw-bold(href="/education") Образование
    li.breadcrumb-item.active(aria-current="page")  #{title}
            
block contentForBlock
    - var docs = ["Специалист по комплексной реабилитации (реабилитолог).doc", "Систематизированная работа со слабоуспевающими детьми в начальной школе.docx", "КПК_Ассистивные техноллогии.pdf", "КПК_Обеспечение доступной среды.docx", "Обеспечение условий доступности образования для обучающихся с ограниченными возможностями здоровья и инвалидов.doc", "КПК_Подготовка региональных экспертов конкурсов проф.мастерства_Абилимпикс.pdf"]
    - var i = 0
    while i < 6
        section.linkToDoc.mb-4
            a.text-black(href=`/docs/${docs[i]}`, target="_blank") 
                span.iconArrow.bg-secondary-subtle.p-2.rounded-3.me-2
                    i.fa-solid.fa-file.fa-xl.text-black
                p.m-0.d-inline-block #{docs[i].slice(0, -4)}
        - i++